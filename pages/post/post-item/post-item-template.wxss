.post-container {
  display: flex;
  flex-direction: column;
  margin-top: 20rpx;
  margin-bottom: 20rpx;
  background-color: #fff;
  border-bottom: 1px solid #ededed;
  border-top: 1px solid #ededed;
  padding-bottom: 5px;

}
.post-con{
  font-size: 13px;
  flex-direction: row;
}
.imgs {
  float: right;
  width: 300rpx;
  margin: 20rpx;
}

.post-image {
  display: block;
  width: 300rpx;
  height: 200rpx;
}
.infos {
  float: left;
  width: 400rpx;
  padding: 20rpx 0 0 10rpx;
}

.post-date {
  padding-top: 20rpx;
 font-size: 28rpx;
 color: #aaa;

}

.post-title {
  letter-spacing: 1px;
  width: 100%;
  color: #666;
  font-size:34rpx;
  line-height: 60rpx;
}
