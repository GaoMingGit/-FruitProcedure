/* pages/post/post.wxss */
@import "post-item/post-item-template.wxss";

.map_container {
  position: absolute;
  top: 0;
  bottom: 80px;
  left: 10rpx;
  right: 10rpx;
}

.map {
  width: 100%;
  height: 40%;
}

.swiper-tab {
  width: 100%;
  border-bottom: 2rpx solid #777;
  text-align: center;
  line-height: 50rpx;
  position: absolute;
  top: 450rpx;
}

.swiper-tab-list {
  font-size: 30rpx;
  display: inline-block;
  width: 33%;
  color: #777;
}

.on {
  color: #ffa1a1;
  border-bottom: 5rpx solid #ffa1a1;
}

.swiper-box {
  display: block;
  height: 100%;
  width: 100%;
  overflow: hidden;
}

.swiper-box view {
  text-align: center;
}

/*newsGrp*/

.news-grp {
  flex-wrap: wrap;
  justify-content: space-around;
  position: absolute;
  top: 490rpx;
}

.news-grp-name {
  width: 750rpx;
  height: 100rpx;
  justify-content: space-between;
  align-items: center;
  background-color: rgba(217, 217, 217, 0.2);
}

